<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  tools:context=".MainActivity">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium"
    android:background="@color/azulVerdoso">
    <ToggleButton
      android:id="@+id/btn_orden"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/medium"
      android:layout_alignParentTop="true"
      android:padding="@dimen/small"
      android:background="@drawable/button_background"
      android:textColor="@color/blanco"
      android:textOff="Ordenar por nombre de usuario"
      android:textOn="Ordenar por apodo" />
    <Button
      android:id="@+id/btn_invite_user"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/medium"
      android:layout_below="@id/btn_orden"
      android:padding="@dimen/small"
      android:background="@drawable/button_background"
      android:drawableStart="@drawable/ic_person_add_white_24dp"
      android:text="@string/crear_solicitud_amistad"
      android:textColor="@color/blanco" />
    <LinearLayout
      android:id="@+id/layout_update_amigos"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/small"
      android:layout_below="@id/btn_invite_user"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/tv_titulo_amigos"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small"
        android:background="@drawable/button_background_blanco"
        android:text="@string/lista_amigos"
        android:textColor="@color/negro"
        android:textSize="14sp" />
      <ImageButton
        android:id="@+id/btnUpdateAmigos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/small"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:contentDescription="@string/todo"
        android:paddingHorizontal="@dimen/small"
        app:srcCompat="@drawable/ic_update" />
    </LinearLayout>
    <ImageView
      android:id="@+id/imgBus"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/layout_update_amigos"
      android:contentDescription="@string/todo"
      app:srcCompat="@drawable/bus_escolar_arcoiris" />
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/contact_list_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/imgBus" />
  </RelativeLayout>
</ScrollView>

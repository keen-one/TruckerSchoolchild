<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  tools:context=".LoginPantalla">
  <RelativeLayout
    style="?android:attr/buttonBarButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azulVerdoso"
    android:gravity="center_horizontal">
    <ImageView
      android:id="@+id/img_bus_arcoiris"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/medium"
      android:layout_marginBottom="@dimen/medium"
      android:layout_marginStart="@dimen/medium"
      android:layout_marginEnd="@dimen/medium"
      android:layout_alignParentBottom="false"
      android:layout_below="@id/layout_botonera"
      android:contentDescription="@string/todo"
      android:scaleType="fitCenter"
      app:srcCompat="@drawable/bus_escolar_arcoiris" />
    <LinearLayout
      android:id="@+id/layout_botonera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/my_cv"
      android:contentDescription="@string/todo"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:paddingHorizontal="@dimen/medium"
      android:weightSum="2">
      <Button
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/medium"
        android:padding="@dimen/small"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/ic_clear_all_white_24dp"
        android:focusable="true"
        android:onClick="limpiarEntrada"
        android:text="@string/limpiar"
        android:textColor="@color/blanco" />
      <Button
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/small"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/ic_card_membership_white_24dp"
        android:focusable="true"
        android:onClick="entrar"
        android:text="@string/entrar"
        android:textColor="@color/blanco" />
    </LinearLayout>
    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="@color/colorPrimary"
      android:theme="@style/ThemeOverlay.AppCompat.Dark"
      app:title="@string/app_name"
      app:titleTextColor="#FFF" />
    <androidx.cardview.widget.CardView
      android:id="@+id/my_cv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/medium"
      android:layout_below="@id/toolbar"
      app:cardBackgroundColor="@color/miPurpura"
      app:cardCornerRadius="10dp"
      app:cardElevation="@dimen/cv_elevation">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large">
        <EditText
          android:id="@+id/caja_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/small"
          android:layout_below="@id/profile_img"
          android:padding="@dimen/small"
          android:background="@drawable/button_background_blanco"
          android:hint="@string/autentica_pantalla_principal"
          android:importantForAutofill="no"
          android:inputType="textEmailAddress"
          android:textSize="@dimen/txt_size" />
        <EditText
          android:id="@+id/caja_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/small"
          android:layout_below="@id/caja_email"
          android:padding="@dimen/small"
          android:background="@drawable/button_background_blanco"
          android:hint="@string/contrase_a"
          android:importantForAutofill="no"
          android:inputType="textPassword"
          android:textSize="@dimen/txt_size" />
        <ImageView
          android:id="@+id/profile_img"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_margin="@dimen/medium"
          android:layout_centerHorizontal="true"
          android:contentDescription="@string/todo"
          app:srcCompat="@drawable/profile_login_yellow" />
        <Spinner
          android:id="@+id/spinner_tipo_usuario"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/small"
          android:layout_below="@id/caja_password"
          android:layout_centerHorizontal="true"
          android:background="@drawable/button_background_blanco"
          android:dropDownWidth="match_parent"
          android:entries="@array/tipoUsers"
          android:spinnerMode="dropdown" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </RelativeLayout>
</ScrollView>

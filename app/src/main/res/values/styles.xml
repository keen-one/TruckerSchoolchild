<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="ButtonTheme" parent="Theme.AppCompat">
    <item name="colorButtonNormal">@color/primaryDarkColor</item>
    <item name="colorControlHighlight">@color/primaryLightColor</item>
  </style>

  <style name="MiTema" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorBackground">@color/azulVerdoso</item>
  </style>

  <style name="FirebaseUI.Button.AccountChooser.GoogleButton">
    <item name="drawableStartCompat">@drawable/fui_ic_googleg_color_24dp</item>
    <item name="android:background">@drawable/button_background_blanco</item>
    <item name="android:textColor">@color/negro</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">@dimen/medium</item>
  </style>

  <style name="FirebaseUI.Button.AccountChooser.EmailButton">
    <item name="drawableStartCompat">@drawable/fui_ic_mail_white_24dp</item>
    <item name="android:background">@drawable/button_background</item>
    <item name="android:textColor">@color/blanco</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">@dimen/medium</item>
  </style>
</resources>
